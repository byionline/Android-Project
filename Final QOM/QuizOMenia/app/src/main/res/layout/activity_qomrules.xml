<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center_horizontal"
    android:background="@color/bg_main">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center_horizontal"
    android:background="@color/bg_main">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="15dip" android:paddingBottom="15dip"
        android:gravity="center_horizontal">
        <!--
                <ImageView android:id="@+id/logo" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:src="@drawable/logo2" />
        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Quiz Rules"
            android:textColor="@color/btn_txt"
            android:id="@+id/decimal_fractions"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="5dip" android:paddingBottom="5dip"
        android:gravity="center_horizontal"
        android:padding="15dp">
        <TextView android:layout_width="fill_parent" android:text="Quiz Rules:"
            android:layout_height="wrap_content" android:textColor="#ffffff"
            android:textStyle="bold" android:id="@+id/rules"/>


    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="5dip" android:paddingBottom="5dip"
        android:gravity="center_horizontal"
        android:padding="15dp">
        <TextView android:layout_width="fill_parent" android:text="1. There are only 5 questions in the quiz."
            android:layout_height="wrap_content" android:textColor="#ffffff"
            android:textStyle="bold" android:id="@+id/rule1"/>


    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="5dip" android:paddingBottom="5dip"
        android:gravity="center_horizontal"
        android:padding="15dp">
        <TextView android:layout_width="fill_parent" android:text="2. Each question is given with time duration of 1 min."
            android:layout_height="wrap_content" android:textColor="#ffffff"
            android:textStyle="bold" android:id="@+id/rule2"/>


    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="5dip" android:paddingBottom="5dip"
        android:gravity="center_horizontal"
        android:padding="15dp">
        <TextView android:layout_width="fill_parent" android:text="3. After the time is over the quiz move to next question automatically. "
            android:layout_height="wrap_content" android:textColor="#ffffff"
            android:textStyle="bold" android:id="@+id/rule3"/>


    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="5dip" android:paddingBottom="5dip"
        android:gravity="center_horizontal"
        android:padding="15dp">
        <TextView android:layout_width="fill_parent" android:text="4. Quiz will not over till the time you have not attempted all 5 questions."
            android:layout_height="wrap_content" android:textColor="#ffffff"
            android:textStyle="bold" android:id="@+id/rule4"/>


    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="5dip" android:paddingBottom="5dip"
        android:gravity="center_horizontal"

        android:background="@color/bg_main"
        android:padding="10dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@color/btn_txt"
            android:text="@string/btn_back"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/bg_main"
            android:clickable="true"
            android:onClick="btnBack" />

    </LinearLayout>


</LinearLayout>
</ScrollView>