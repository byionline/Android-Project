<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_main">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:gravity="center_horizontal"

       >


        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:paddingTop="5dip" android:paddingBottom="5dip"
            android:gravity="center_horizontal">

            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:textColor="#ffffff"
                android:textStyle="bold" android:id="@+id/endResult"
                android:paddingLeft="15dip" android:paddingRight="15dip"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:paddingTop="1dip" android:paddingBottom="1dip"
            android:gravity="center_horizontal">

            <ImageView android:id="@+id/resultPage"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:paddingTop="5dip" android:paddingBottom="5dip"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@color/btn_txt"
                android:text="@string/btn_menu"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/bg_main"
                android:clickable="true"
                android:onClick="btnMenu" />

        </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:paddingTop="5dip" android:paddingBottom="5dip"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnAnswer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@color/btn_txt"
            android:text="@string/btn_answer"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/bg_main"
            android:clickable="true"
            android:onClick="btnAnswer" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
